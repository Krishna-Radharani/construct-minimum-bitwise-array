class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
         vector<int> ans; // To store the result

        for (int j = 0; j < nums.size(); j++) {
            bool found = false; // Flag to check if we found a valid 'i'
            
            for (int i = 0; i < nums[j]; i++) {
                if ((i | (i + 1)) == nums[j]) {
                    ans.push_back(i); // Append 'i' to the result if condition is met
                    found = true;
                    break; // Exit the inner loop once a valid 'i' is found
                }
            }

            if (!found) {
                ans.push_back(-1); // If no valid 'i' was found, append -1
            }
        }

        return ans;
    }
};
